<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.landvibe.beereverything.viewmodel.BeerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_beer_title"
                android:layout_width="@dimen/width_et_beer_list"
                android:layout_height="wrap_content"
                android:text="@={viewmodel.newBeerTitle}"/>

            <Button
                android:id="@+id/btn_add_beer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewmodel.insertBeer(viewmodel.newBeerTitle)}"
                android:text="@string/beer_list_add_beer_btn" />

            <Button
                android:id="@+id/btn_delete_all_beer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewmodel.deleteAll()}"
                android:text="@string/beer_list_delete_all_beer_btn" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_view_beer_list"
            android:layout_marginTop="@dimen/margin_top_view_beer_list"
            android:layout_marginBottom="@dimen/margin_top_view_beer_list"
            android:background="#333333" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_beer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_start_rv_beer_list"
            android:layout_marginEnd="@dimen/margin_end_rv_beer_list"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:scrollbars="vertical" />

    </LinearLayout>

</layout>